<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.stiki.doleno.mangab">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mangab"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mangab"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.ScheduleActivity"></activity>
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.EnterCodeActivity" />
        <activity android:name=".activity.ScanResultActivity" />
        <activity android:name=".activity.HistoryMhsActivity" />
        <activity android:name=".activity.RekapActivity" />
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:noHistory="true" />
        <activity android:name=".activity.HistoryActivity" />
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ResultActivity" />
        <activity android:name=".activity.GenerateActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.ScanActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:noHistory="true" />
        <activity android:name=".activity.AboutActivity" />
    </application>

</manifest>